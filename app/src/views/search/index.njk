{% extends "../index.njk" %}



{% block head %}
<title>Home</title>
{% endblock %}

{% block content %}

<section class="search-products container">
    <aside>
        <div class="header">
            <h2>{{search}}</h2>
            <p>{{total_count}} encontrados</p>
        </div>
        <nav class="categories">
            <h4>Categorias</h4>
            <ul>
                {% for category in categories %}
                <li><a href="/search?search={{search}}&category_id={{category}}">{{category}}</a></li>
                {% endfor %}

            </ul>
        </nav>
    </aside>

    {{section.products(products)}}
</section>

{% endblock %}